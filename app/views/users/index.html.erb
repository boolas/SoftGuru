<h1>Users</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <% if administrator? %>
        <th></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'Yes' : 'No' %></td>
        <% if administrator? %>
            <td><%= link_to 'Edit', edit_user_path(user) %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
    <%= link_to 'New User', new_user_path %>
<% end %>